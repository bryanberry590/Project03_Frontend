{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "bundler",
    "customConditions": ["react-native"],

    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "types": ["react", "react-native"]
  },
  "include": ["App.tsx", "src/**/*"]
}
