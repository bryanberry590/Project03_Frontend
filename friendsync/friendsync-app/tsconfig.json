{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "bundler",
    "customConditions": ["react-native"],

    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "types": ["react", "react-native"],
    
    //current error with version 6.0, 
    // claude says to remove it so commenting out in order it is needed for anyone elses work
    // "ignoreDeprecations": "6.0"
  },
  "include": ["App.tsx", "src/**/*"]
}
